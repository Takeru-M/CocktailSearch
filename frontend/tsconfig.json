{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "baseUrl": "resources/js",
      "paths": {
        "@/*": ["./*"]
      },
      "resolveJsonModule": true
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.tsx",
        "resources/js/**/*.vue",
        "resources/js/**/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}
